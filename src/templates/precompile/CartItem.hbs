{{#each this}}
    <tr class="js-cartItem">
        <td data-th="Product">
            <div class="row">
                <div class="col-sm-2 hidden-xs"><img src="{{product.image}}" width="100" height="100px" alt="..." class="img-responsive"/></div>
                <div class="col-sm-10">
                    <h4 class="nomargin">{{product.company}} - {{product.category}}</h4>
                    <p>{{product.type}}</p>
                </div>
            </div>
        </td>
        <td data-th="Price">${{product.price}}</td>
        <td data-th="Quantity">
            <input type="number" min="1" class="form-control text-center js-cartItemQuantity" data-cart-id="{{cart.id}}" value="{{cart.qty}}">
        </td>
        <td data-th="Subtotal" class="text-center">$<span class="js-cartItemSubTotal">{{subTotal}}</span></td>
        <td class="actions" data-th="">
            <button class="btn btn-danger btn-sm js-cartItemRemoveBtn" data-cart-id="{{cart.id}}"><i class="fa fa-trash-o"></i></button>
        </td>
    </tr>
{{/each}}
